<%= simple_form_for [:manage, @item] do |f| %>
  <div class="card">
    <div class="card-header">New Item</div>
    <div class="card-body">
      <%= render "shared/errors", object: @item %>

      <div class="container" style="border:1px solid #cecece;">
        <%= f.association :fiesta_item, label: false, value_method: :id, hint: "Select the item you are selling" %>
        <div class="row">
          <div class="col-sm">
            <%= f.input :note, label: false, hint: 'Enter a note for your potential buyers', as: :text, input_html: { class: "form-control form-control-solid" } %>
          </div>
          <div class="col-sm">
            <textarea class="form-control form-control-solid">
Info about an item from the fiesta_items model. "this is a mystical thingy llalalala"
            </textarea>
          </div>
        </div>
      </div>     

      <hr/>

      <div class="container" style="border:1px solid #cecece;">
      Stats
        <div class="row">
          <div class="col-sm">
            END: <input type="text" id="end" name="end" value="1" disabled="true" class="form-control form-control-solid">
            <div class="w-100"></div>
            DEX: <input type="text" id="dex" name="dex" value="1" disabled="true" class="form-control form-control-solid">
            <div class="w-100"></div>
            STR: <input type="text" id="str" name="str" value="1" disabled="true" class="form-control form-control-solid">
            <div class="w-100"></div>
            SPR: <input type="text" id="spr" name="spr" value="1" disabled="true" class="form-control form-control-solid">
            <div class="w-100"></div>
            INT: <input type="text" id="int" name="int" value="1" disabled="true" class="form-control form-control-solid">
          </div>
          <div class="col-sm">
            END: <%= f.input :end, label: false, as: :integer, input_html: { class: "form-control form-control-solid" } %>
            <div class="w-100"></div>
            DEX: <%= f.input :dex, label: false, as: :integer, input_html: { class: "form-control form-control-solid" } %>
            <div class="w-100"></div>
            STR: <%= f.input :str, label: false, as: :integer, input_html: { class: "form-control form-control-solid" } %>
            <div class="w-100"></div>
            SPR: <%= f.input :spr, label: false, as: :integer, input_html: { class: "form-control form-control-solid" } %>
            <div class="w-100"></div>
            INT: <%= f.input :int, label: false, as: :integer, input_html: { class: "form-control form-control-solid" } %>
          </div>
          <div class="col-sm">
          </div>
          <div class="col-sm">
          </div>
        </div>
      </div>

      <hr/>

      <div class="container" style="border:1px solid #cecece;">
        <div class="row">
          <div class="col">
            Licenses<br>+Add New
          </div>
          <div class="col">
            Sockets<br>+Add New
          </div>
          <div class="col">
            HOBS <%= f.input :hobs, as: :integer %>
          </div>
        </div>
      </div>

      <hr/>

      <div class="container" style="border:1px solid #cecece;">
      BIN Price
        <div class="row">
          <div class="col">
            <%= f.input :copper, as: :integer %>
          </div>
          <div class="col">
            <%= f.input :silver, as: :integer %>
          </div>
          <div class="col">
            <%= f.input :gold, as: :integer %>
          </div>
          <div class="col">
            <%= f.input :gem, as: :integer %>
          </div>
        </div>

      </div>
    </div>
    <div class="card-footer">
      <%= f.button :submit, class: "btn btn-primary" %>
      <%= link_to 'Cancel', manage_root_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>